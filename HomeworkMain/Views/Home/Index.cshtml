@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Book>

<div class="book-container">
    @foreach (var book in Model)
    {
        <div class="book-tile">
            <h3>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@book.Id">@book.Title</a>
            </h3>
            <p>Автор: @book.Author</p>
            <p>Жанр: @book.Genre</p>
        </div>
    }
</div>


